.shouye {
  background-color: #fff;
}
.price{
  width:100rpx;
  color:red;
  padding: 10rpx 0;
}
.square-title{
  display: flex;
  align-items: center;
}
.search-product {
  display: flex;
  padding: 20rpx 30rpx;
  align-items: center;
  background: #fff;
  border-width: 0rpx;
  border-style: solid;
  border-color: #cecece;
  border-radius: 5rpx;
  margin-bottom: 10rpx;
}
.search-icon {
  margin-right: 30rpx;

}
.search-placeholder {
  color:#d8d8d8;
}
.search-input {
  flex: 1;
  color: #4a4a4a;
  font-size: 32rpx;
}
.sec-list{
  box-sizing: border-box;
  padding: 20rpx 30rpx;
  box-shadow:rgba(63, 63, 63, 0.2) 0 1px 5px;
  margin-bottom:10rpx;
}
.sec-title{
  height: 70rpx;
  line-height: 70rpx;
  display: flex;
  justify-content: space-between;
  font-size: 28rpx;
  /* border-bottom:1rpx solid #cecece; */
}
.more{
  font-size: 24rpx;
  color:#999
}
.sec-cnt-list{
  display: flex;
  justify-content: flex-start;
  flex-wrap: wrap;
}
.sec-item{
  width:230rpx;
  height: 250rpx;
  font-size: 24rpx;
  display: flex;
  flex-direction:column;
  align-items: center;
  color:#999;
}
.sec-item image{
  width: 200rpx;
  height: 210rpx;
}


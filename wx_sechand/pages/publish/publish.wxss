/* page/addHouse/addHouse.wxss */
.publish .select-house{
  padding: 20rpx 28rpx;
  background-color: #dfe8ec;
  font-size:28rpx;
}
.publish .select-other{
 padding: 20rpx 28rpx;
 font-size: 28rpx;
}
.publish .section{
  display: flex;
  justify-content: flex-start;
  padding: 16rpx 28rpx;
  font-size: 28rpx;
}
.publish .section label{
  width:220rpx;
  padding-right: 20rpx;
  font-size:28rpx;
  line-height: 46rpx;
}
.publish .section picker{
  position: relative;
  width:470rpx;
}
.publish .section picker image{
  position: absolute;
  top:0;
  right:0;
  width: 40rpx; 
  height: 40rpx;
}
.publish .btn-area{
  padding: 10rpx 28rpx;
}
.publish .upload-box {
  padding: 20rpx;
  overflow: hidden;
}
.publish .redC{
  color: red;
}
.publish .upload-box-view {
  position: relative;
  float: left;
  width: 31.3%;
  margin: 1%;
  margin-bottom: 15rpx;
  padding-top: 32.3%;
  box-sizing: border-box;
}
.publish .upload-box-view:nth-child(3n) {
  
}
.publish .upload-box-view .upload-box-btn {
  position: absolute;
  top: 0;
  right: 0;
  width: 100%;
  height: 100%;
  border: 1px solid #d6d5d5;
  color: #d6d5d5;
  font-size: 45rpx;
}
.publish .upload-box-view .upload-box-img {
  position: absolute;
  top: 0;
  right: 0;
  width: 100%;
  height: 100%;
}
.publish .upload-box-btn image {
  width: 70rpx;
  height: 70rpx;
  position: absolute;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  margin: auto;
}
.publish .upload-delete {
  position: absolute;
  width: 35rpx;
  height: 35rpx;
  padding: 10rpx;
  top: 0;
  right: 0;
  background: #000;
}

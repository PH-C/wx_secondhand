/* pages/productDetail/productDetail.wxss */
.product-detail{
  box-sizing: border-box;
  background-color: #fff;
  margin-bottom: 120rpx;
  
}
.product-title{
  border-bottom: 1px solid #cecece;
  box-shadow:rgba(63, 63, 63, 0.2) 0 1px 5px;
  margin-bottom:10rpx;
  padding:0  30rpx;
}
.seller{
  height: 100rpx;
  line-height: 100rpx;
  display: flex;
  align-items: center;
}
.seller image{
  box-sizing: border-box;
  width:60rpx;
  height: 60rpx;
  border-radius: 50%;
  margin-right: 10rpx;
}
.price{
  font-size: 20rpx;
}
.mobile{
  display: flex;
  align-items: center;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 26rpx;
}
.red-pri{
  color: red;
  font-size: 38rpx;
}

.title{
  font-size: 38rpx;
  color:#000;
  padding: 20rpx 0;
}
.swiper{
   padding: 40rpx;
   height:450rpx;
}
.slide-image{
  height:450rpx;
}
.product-desc{
  box-shadow:rgba(63, 63, 63, 0.2) 0 1px 5px;
  margin-bottom:10rpx;
  color:#aaa;
  line-height:26px;
  padding:0  30rpx;
  /* color:#7b7b7b; */
 
  font-size:28rpx;
  text-align:justify;
  font-weight:normal;
}
.desc-title{
  font-size:36rpx;
  color: #000;
  display: flex;
  align-items: center;
  padding: 10rpx 0;
}


.btns{
  position: fixed;
  box-sizing: border-box;
  left:0;
  bottom: 0;
  width:100%;
  height: 140rpx;
  line-height: 140rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 32rpx;
  word-spacing: 25rpx;
  padding: 25rpx;
  background-color: #fff;
  border-top: 1px solid #cecece;
}
.btns .icon-text{
  position: relative;
  /* margin-right: 30rpx; */
  display: flex;
  align-items: center;
  justify-content: flex-start;
}
.btns .img-icon{
  width:40rpx;
  height:40rpx;
}
.button{
  width: 180rpx;
  height: 70rpx;
  line-height: 70rpx;
  background: #04dfe1;
  text-align: center;
  font-size: 30rpx;
  border-radius: 4px;
  color: #fff;
  margin-right: 20rpx;
}

button {
  position:relative;
  display:inline;
  margin-left:auto;
  margin-right:auto;
  padding-left:0px;
  padding-right:0px;
  box-sizing:border-box;
  font-size:18px;
  text-align:center;
  text-decoration:none;
  line-height:2.55555556;
  border-radius:5px;
  /* -webkit-tap-highlight-color:transparent; */
  overflow:hidden;
  color:#000000;
  border:0rpx;
  background-color:#fff;
}
.button::after{
  border:0;
  display: none;
}
button::after{
  border:0;
  display: none;
}
.redfont{
  /* color: red; */
  background: red;
}
.comment-box{
  box-sizing: border-box;
  padding: 20rpx 20rpx 20rpx 0rpx;
  position: fixed;
  bottom: 0;
  left:0;
  width:750rpx;
  height: 140rpx;
  line-height: 140rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  background-color: #fff;
   border-top: 1px solid #cecece;
}
.comment-box input{
  width:420rpx;
  height: 70rpx;
  line-height: 70rpx;
  border-radius: 12rpx;
  background-color: #f0e6e6;
}
.phone{
  width:50rpx;
  height: 50rpx;
}
.close{
  display: inline-block;
  width:80rpx;
  height: 80rpx;
  line-height: 80rpx;
  border-radius: 50%;
  text-align: center;
  font-size: 48rpx;
}
.comments{
  background-color: #fff;
  box-sizing: border-box;
  padding: 20rpx;
}
.comment-item{
  display: flex;
}
.comment-item-left{
  width: 50rpx;

}
.comment-item-left image{
  box-sizing: border-box;
  width:40rpx;
  height: 40rpx;
  border-radius: 50%;
  margin-right: 10rpx;
}
.comment-item-right{
  display: flex;
  flex-direction: column;
}
.replies{
  display: flex;
}